extends ../layout

block content
    div.content(class = `${theme}`)
        div.row
            div.title
                h1 #{todos.description} - #{translate}
                div.subtitle
                    h3 Complete by #{todos.deadline}
            div.actions-notes
                a.button(class = `${theme}`)(href='/') Back to Home
                a.button(class = `${theme}`)(href=`/item/edit/${todos.id}`) Edit
                a.button(class = `${theme}`)(href=`/item/delete/${todos.id}` class="btn btn-danger" ) Delete
        ul
            li= todos.notes
