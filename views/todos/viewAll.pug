extends ../layout

include ../mixins/itemList

block content
  div.content(class = `${theme}`)
    section
      header.page-header(class = `${theme}`) All Todos

    div.section-list
      +itemList('Past Due', pastItems)

    div.section-list
      +itemList('Today', currentItems)

    div.section-list
      +itemList('In The Future', futureItems)

    div.button-row
      a.button.primary(class = `${theme}`)(href="/item/add") Add New Item

    div.section-list.completed
      +itemList('Completed Items', completeItems)




